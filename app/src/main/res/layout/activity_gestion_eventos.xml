<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">
        <ImageView
            android:id="@+id/btnImageUser"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:tint="@color/black"
            android:src="@drawable/icon_account">

        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola"
                android:textStyle="bold"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center"
            android:layout_marginBottom="20dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCrearEvento"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:text="Crear evento"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:drawableTint="@color/black"
                android:drawableTop="@drawable/icon_create"
                android:background="@drawable/design_btn_gestion_create"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="30dp"
                android:paddingBottom="25dp"
                android:layout_marginEnd="20dp"
                android:textAllCaps="false"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnVerEventos"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:text="Ver eventos"
                android:textStyle="bold"
                android:drawableTint="@color/black"
                android:textColor="@color/black"
                android:drawableTop="@drawable/icon_ojo"
                android:background="@drawable/desing_btn_gestion_eventos"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="30dp"
                android:paddingBottom="25dp"
                android:layout_marginStart="20dp"
                android:textAllCaps="false"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNewUser"
                android:layout_width="320dp"
                android:layout_height="120dp"
                android:drawableTint="@color/black"
                android:text="Crear usuario"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:drawableTop="@drawable/icon_person_new_user"
                android:background="@drawable/desing_btn_gestion_newuser"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="30dp"
                android:paddingBottom="25dp"
                android:textAllCaps="false"
                />
        </LinearLayout>



    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnButonCerrarSesion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_normal"
        android:text="Cerrar sesiÃ³n"
        android:layout_margin="10dp"
        android:textColor="@color/azulClaro"
        android:drawableStart="@drawable/icon_logout"
        android:paddingStart="16dp"
        android:paddingEnd="40dp"
        android:drawableTint="@color/azulClaro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>